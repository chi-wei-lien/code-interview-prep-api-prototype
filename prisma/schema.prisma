generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @default(autoincrement()) @id
  email         String          @unique
  name          String
  picture       String?
  createdAt     DateTime        @default(now()) 
  applications  Application[]
  codeChallenge CodeChallenge[]
  appStatuses   AppStatus[]     
}

model Application {
  id            Int             @default(autoincrement()) @id
  company       String
  companyURL    String
  role          String
  user          User            @relation(fields: [userId], references: [id])
  userId        Int
  statusId      Int             
  statusValue   String          @default("applied")
  status        AppStatus       @relation(fields: [statusId], references: [id])
  createdAt     DateTime        @default(now()) 
  @@unique(fields: [id, userId], name: "appUserID")
}

model CodeChallenge {
  id            Int             @default(autoincrement()) @id
  challenge     String
  challengeURL  String
  user          User            @relation(fields: [userId], references: [id])
  userId        Int
  createdAt     DateTime        @default(now()) 
  @@unique(fields: [id, userId], name: "challengeUserID")
}

model AppStatus {
  id            Int             @default(autoincrement()) @id
  value         String          
  userId        Int
  color         String          @default("94a3b8")
  user          User            @relation(fields: [userId], references: [id])
  applications  Application[]
  @@unique(fields: [value, userId], name: "appStatusID")
}
